<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/nav_bar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_super_xxxlerge2"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/navigation_back"
        android:layout_width="@dimen/space_xmedium_lerge"
        android:layout_height="@dimen/space_xmedium_lerge"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/space_medium_lerge"
        android:layout_marginStart="@dimen/space_medium_largex"
        android:layout_marginEnd="@dimen/space_medium"
        android:contentDescription="@string/image"/>

    <TextView
        android:id="@+id/navigation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/navigation_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/navigation_back"
        android:layout_marginStart="@dimen/space_xsmall"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/caramelsweets"
        android:textSize="@dimen/text_small"
        android:textColor="@color/darkGrey"
        app:layout_editor_absoluteY="@dimen/text_medium_large"/>

    <LinearLayout
        android:id="@id/nav_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/icon_filter"
            android:layout_width="@dimen/space_xmedium_lerge"
            android:src="@drawable/ic_baseline_filter_list_24"
            android:layout_marginEnd="@dimen/space_medium_largex"
            android:layout_height="@dimen/space_xmedium_lerge"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/divider"/>

</androidx.constraintlayout.widget.ConstraintLayout>